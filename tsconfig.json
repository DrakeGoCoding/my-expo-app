{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "jsx": "react-native",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": false,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@pdt/*": ["./*"],
      "@pdt/app": ["./app"],
      "@pdt/assets": ["./assets"],
      "@pdt/components": ["./components"],
      "@pdt/constants": ["./constants"]
    }
  },
  "include": [
    ".eslintrc",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "cypress",
    "**/*.test",
    "**/*.spec"
  ]
}
